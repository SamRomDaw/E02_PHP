    <h1>Variables</h1>
    
    <?php
        
        $operador = "+";
        $array = array(8,8.2,true,"Cthulhu",null);

        echo "Operaciones (Cambiar la variable $operador para ver los resultados de los demÃ¡s operadores): <br><br>";

        switch ($operador) {
            case "-":
                for ($i=0;$i<sizeof($array);$i++) {

                echo "$array[$i]"."<br><br>";

                for ($j=0;$j<sizeof($array);$j++) {

                $valor = '';
                $valor = $array[$i]-$array[$j];
                echo $array[$i]." - ".$array[$j]." = ".$valor." -> ".gettype($valor)."<br>";

            };
            echo "<br>";
        };
            echo "<br>";

            case "+":
                for ($i=0;$i<sizeof($array);$i++) {
                    
                echo "$array[$i]"."<br><br>";

                for ($j=0;$j<sizeof($array);$j++) {

                $valor = '';
                $valor = $array[$i]+$array[$j];
                echo $array[$i]." + ".$array[$j]." = ".$valor." -> ".gettype($valor)."<br>";

            };
            echo "<br>";
        };
            echo "<br>";

            case "*":
                for ($i=0;$i<sizeof($array);$i++) {
                    
                echo "$array[$i]"."<br><br>";

                for ($j=0;$j<sizeof($array);$j++) {

                $valor = '';
                $valor = $array[$i]*$array[$j];
                echo $array[$i]." * ".$array[$j]." = ".$valor." -> ".gettype($valor)."<br>";

            };
            echo "<br>";
        };
            echo "<br>";

            case "/":
                for ($i=0;$i<sizeof($array);$i++) {
                    
                echo "$array[$i]"."<br><br>";

                for ($j=0;$j<sizeof($array);$j++) {

                $valor = '';
                $valor = $array[$i]/$array[$j];
                echo $array[$i]." / ".$array[$j]." = ".$valor." -> ".gettype($valor)."<br>";

            };
            echo "<br>";
        };
            echo "<br>";

            case "%":
                for ($i=0;$i<sizeof($array);$i++) {
                    
                echo "$array[$i]"."<br><br>";

                for ($j=0;$j<sizeof($array);$j++) {

                $valor = '';
                $valor = $array[$i]%$array[$j];
                echo $array[$i]." % ".$array[$j]." = ".$valor." -> ".gettype($valor)."<br>";

            };
            echo "<br>";
        };
            echo "<br>";
            
            case "**":
            for ($i=0;$i<sizeof($array);$i++) {
                
            echo "$array[$i]"."<br><br>";

            for ($j=0;$j<sizeof($array);$j++) {

            $valor = '';
            $valor = $array[$i]**$array[$j];
            echo $array[$i]." ** ".$array[$j]." = ".$valor." -> ".gettype($valor)."<br>";

        };
        echo "<br>";
    };
        echo "<br>";

    }
    ?>

